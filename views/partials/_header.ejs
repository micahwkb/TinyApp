<% if (username) { %>
<form class="auth-main" method="POST" action="/logout">
  <button class="btnbig btnauth" type="submit">Logout</button>
</form>
<% } else { %>
<form class="auth-main" method="POST" action="/login">
  <input type="text" name="username" autofocus="autofocus" placeholder="username/email">
  <input type="password" name="password" placeholder="password">
  <button class="btnbig btnauth" type="submit">Login</button>
</form>
<% }; %>